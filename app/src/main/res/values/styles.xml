<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--<style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--<item name="colorControlNormal">#fff</item>-->
    <!--<item name="colorControlActivated">#fff</item>-->
    <!--<item name="colorControlHighlight">#fff</item>-->
    <!--</style>-->

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextView7" parent="TextView">

        <item name="android:textSize">@dimen/_7sdp</item>


    </style>

    <style name="TextView10" parent="TextView">

        <item name="android:textSize">@dimen/_10sdp</item>


    </style>

    <style name="TextView12" parent="TextView">

        <item name="android:textSize">@dimen/_12sdp</item>

    </style>

    <style name="TextView15" parent="TextView">

        <item name="android:textSize">@dimen/_15sdp</item>

    </style>

    <style name="TextView15Bold" parent="TextView">

        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.SignUp" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!--  <style name="Spinner" >
          <item name="android:layout_width">wrap_content</item>
          <item name="android:layout_height">@dimen/_35sdp</item>
          <item name="android:textSize">@dimen/_12sdp</item>
          <item name="android:background">@drawable/spinshape</item>
      </style>
  -->


    <style name="Button">
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_2sdp</item>
        <item name="android:paddingRight">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_2sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <!--<style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">-->
    <!--<item name="android:progressDrawable">@drawable/star</item>-->
    <!--<item name="android:minHeight">18dp</item>-->
    <!--<item name="android:maxHeight">18dp</item>-->
    <!--</style>-->

    <style name="Threedots" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">

        <item name="colorAccent">@color/toolbar_top</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/green</item>
    </style>
</resources>
