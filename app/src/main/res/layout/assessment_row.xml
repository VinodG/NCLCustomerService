<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<HorizontalScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--&gt;-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">





        <LinearLayout
            android:id="@+id/ll_spinner"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">

            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:id="@+id/tv_assessment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assessment" />

            <com.kenmeidearu.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/party_country"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/custom_spinner"></com.kenmeidearu.searchablespinnerlibrary.SearchableSpinner>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_empty_txt"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical"
            android:visibility="gone">

            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter" />

            <EditText
                android:id="@+id/party_postal"
                android:layout_width="@dimen/_160sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/button_bg_white"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/addlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/add_table"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/removelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:src="@drawable/decrease_table" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:src="@drawable/ic_iconfinder_icon_e_4875759" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!--</HorizontalScrollView>-->
</LinearLayout>