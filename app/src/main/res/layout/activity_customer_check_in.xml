<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_toolbar_multi"
        android:orientation="vertical">

        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal">-->

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_margin="@dimen/_15sdp"
            android:src="@drawable/ic_back_icon" />

        <com.ncl.sensationalagri.customviews.CustomTextView
            android:id="@+id/custcompnyname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_minus10sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_toRightOf="@+id/back_button"
            android:text="Customer company Name"
            android:textColor="@color/white" />

        <!--</LinearLayout>-->

        <com.ncl.sensationalagri.customviews.CustomTextView
            android:id="@+id/custcompanyaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custcompnyname"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_minus10sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_toRightOf="@+id/back_button"
            android:text="P.No : 98 Kavuri hills, Madhapur, Hitech-city, Hyderabad"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

    <com.ncl.sensationalagri.customviews.CustomEditText
        android:id="@+id/remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/_10sdp"
        android:backgroundTint="@color/gray"
        android:hint="Remark"
        android:textSize="@dimen/_10sdp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/checkin_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="@drawable/button_background_grey"
        android:visibility="visible">

        <ImageView
            android:id="@+id/checkin_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30sdp"
            android:src="@drawable/checkin" />

        <com.ncl.sensationalagri.customviews.CustomTextviewSemiBold
            android:id="@+id/checkin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@+id/checkin_image"
            android:text="CHECK IN"
            android:textSize="@dimen/_20sdp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/checkout_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/_30sdp"
        android:background="@drawable/button_background_grey"
        android:visibility="gone">

        <ImageView
            android:id="@+id/checkout_image"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_30sdp"
            android:src="@drawable/checkout" />

        <com.ncl.sensationalagri.customviews.CustomTextviewSemiBold
            android:id="@+id/checkout_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_toRightOf="@+id/checkout_image"
            android:text="CHECK OUT"
            android:textSize="@dimen/_20sdp" />

    </RelativeLayout>


</RelativeLayout>
