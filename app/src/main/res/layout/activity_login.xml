    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_102sdp"
        android:src="@drawable/app_icon" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:src="@drawable/ic_username" />

        <com.ncl.nclcustomerservice.customviews.CustomEditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:backgroundTint="@android:color/transparent"
            android:layout_gravity="center"
            android:hint="Username / Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_11sdp"
            android:text=""/>
    </LinearLayout>


    <View
        android:id="@+id/view"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="0.25dp"
        android:layout_below="@+id/linear"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_60sdp"
        android:background="@color/white" />

    <ImageView
        android:id="@+id/btn_login"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_below="@+id/linear"
        android:layout_marginLeft="@dimen/_minus56sdp"
        android:layout_marginTop="@dimen/_minus20sdp"
        android:layout_toRightOf="@id/view"
        android:src="@drawable/login_icon" />

    <LinearLayout
        android:id="@+id/linear_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/password_img"
            android:layout_width="@dimen/_16sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_40sdp"
            android:src="@drawable/ic_passwordicon" />

        <com.ncl.nclcustomerservice.customviews.CustomEditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:backgroundTint="@android:color/transparent"
            android:hint="Password"
            android:inputType="textPassword"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/_11sdp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/linear_password"
        android:layout_centerInParent="true"
        android:gravity="bottom"
        android:orientation="horizontal">

        <com.ncl.nclcustomerservice.customviews.CustomTextviewSemiBold
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_toRightOf="@+id/btn_login"
            android:text="Forgot your password ?"
            android:textColor="@color/gray"
            android:textSize="@dimen/_11sdp" />

