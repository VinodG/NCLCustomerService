<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--<HorizontalScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--&gt;-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            >

            <LinearLayout
                android:layout_width="@dimen/_180sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:weightSum="2">

                <com.ncl.nclcustomerservice.customviews.CustomTextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Product"
                    android:gravity="bottom"
                    android:layout_weight="1"
                    />

                <com.kenmeidearu.searchablespinnerlibrary.SearchableSpinner
                    android:id="@+id/opportunirty_product_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_spinner">
                </com.kenmeidearu.searchablespinnerlibrary.SearchableSpinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:weightSum="2">

                <com.ncl.nclcustomerservice.customviews.CustomTextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Quantity"
                    />

                <EditText
                    android:id="@+id/quantity_product"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:text="1"
                    android:background="@drawable/button_bg_white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
               >

                <com.ncl.nclcustomerservice.customviews.CustomTextView
                    android:id="@+id/tvRatePerSFTTittle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Rate per SFT" />
                <EditText
                    android:id="@+id/tvRatePerSFT"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:text=""
                    android:background="@drawable/button_bg_white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                >

                <com.ncl.nclcustomerservice.customviews.CustomTextView
                    android:id="@+id/tvValueTittle"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Value" />

                <com.ncl.nclcustomerservice.customviews.CustomTextView
                    android:id="@+id/tvValue"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_white"
                    android:text=""
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:weightSum="2"
                android:visibility="visible"
                >

                <com.ncl.nclcustomerservice.customviews.CustomTextView
                    android:id="@+id/tvProbability"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Probability (%)"
                    android:gravity="bottom"
                    android:layout_weight="1"
                   />

                <Spinner
                    android:id="@+id/opportunirty_probulity_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_spinner">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                >

                <com.ncl.nclcustomerservice.customviews.CustomTextView
                    android:id="@+id/tvScheduleFromDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Schedule From Date" />


                <com.ncl.nclcustomerservice.customviews.CustomTextView
                    android:id="@+id/opportunity_insert_fromdate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_white"
                    android:text=""
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/_5sdp"
                android:visibility="gone">

                <com.ncl.nclcustomerservice.customviews.CustomTextView
                    android:id="@+id/tvScheduleUptoDate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="Schedule Upto Date" />

                <com.ncl.nclcustomerservice.customviews.CustomTextView
                    android:id="@+id/opportunity_insert_uptodate"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_bg_white"
                    android:text=""
                    android:inputType="number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/addlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/add_table"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/removelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:gravity="center"
                        android:src="@drawable/decrease_table"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    <!--</HorizontalScrollView>-->

</LinearLayout>