<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">
            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:id="@+id/tvACName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name" />

            <com.ncl.nclcustomerservice.customviews.CustomEditText
                android:id="@+id/etACName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/button_bg_white"
                android:gravity="left|center"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <Spinner
                android:id="@+id/ph_name_spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:visibility="gone"
                android:background="@drawable/custom_spinner"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">
            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:id="@+id/tvACDesignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Designation" />

            <com.ncl.nclcustomerservice.customviews.CustomEditText
                android:id="@+id/etACDesignation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/button_bg_white"
                android:gravity="left|center"
                android:imeOptions="actionNext"
                android:inputType="textCapSentences"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">

            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:id="@+id/tvACMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile" />

            <com.ncl.nclcustomerservice.customviews.CustomEditText
                android:id="@+id/etACMobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/button_bg_white"
                android:gravity="left|center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/addlayout_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/add_table"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/removelayout_ac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:src="@drawable/decrease_table" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>