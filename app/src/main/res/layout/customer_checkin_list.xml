<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical">


    <com.ncl.sensationalagri.customviews.CustomTextView
        android:id="@+id/customercompanyname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sai Krishna fertilizer Company"
        android:textColor="@color/black" />

    <com.ncl.sensationalagri.customviews.CustomTextView
        android:id="@+id/customer_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P.No :98, kavuri hills, Madhapur, Hitech City Hyderabad"

        />

    <com.ncl.sensationalagri.customviews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P.No :98, kavuri hills, Madhapur, Hitech City Hyderabad"
        android:visibility="gone"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <com.ncl.sensationalagri.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check in" />

            <com.ncl.sensationalagri.customviews.CustomTextView
                android:id="@+id/checkin_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">

            <com.ncl.sensationalagri.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Out" />

            <com.ncl.sensationalagri.customviews.CustomTextView
                android:id="@+id/checkout_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- " />
        </LinearLayout>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/divider" />
</LinearLayout>