<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">
            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:id="@+id/tvTeamMemberName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Member Name" />

            <com.ncl.nclcustomerservice.customviews.CustomEditText
                android:id="@+id/etTeamMemberName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/button_bg_white"
                android:gravity="left|center"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">
            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:id="@+id/tvTeamMemberMobileNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team Member Mobile no" />

            <com.ncl.nclcustomerservice.customviews.CustomEditText
                android:id="@+id/etTeamMemberMobileNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/button_bg_white"
                android:gravity="left|center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">
            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:id="@+id/tvCoAadharNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhar Number" />
            <com.ncl.nclcustomerservice.customviews.CustomEditText
                android:id="@+id/etCoAadharNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/button_bg_white"
                android:gravity="left|center"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="12"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:gravity="left|center"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_choose_file"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_28sdp"
                    android:text="Choose File"
                    android:textAllCaps="false"
                    android:gravity="center"
                    android:textColor="@color/toolbar"/>
                <TextView
                    android:id="@+id/tv_file_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/gray"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="center_vertical"
                    android:hint="No file chosen"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/addlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/add_table"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/removelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:src="@drawable/decrease_table" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>