<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<HorizontalScrollView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scrollbarSize="@dimen/_2sdp"-->
        <!--android:nestedScrollingEnabled="false"-->

        <!--&gt;-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <com.kenmeidearu.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/opportunity_insert_product"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_35sdp"
                android:background="@drawable/custom_spinner" />


            <include
                android:id="@+id/opportunity_insert_competitioncustomer"
                layout="@layout/custom_background"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                />

            <!--<include-->
                <!--android:id="@+id/opportunity_insert_competition"-->
                <!--layout="@layout/custom_background"-->
                <!--android:layout_width="@dimen/_80sdp"-->
                <!--android:layout_height="@dimen/_40sdp"-->
                <!--android:layout_marginLeft="@dimen/_5sdp"-->
                <!--/>-->

            <include
                android:id="@+id/opportunity_insert_competitionprice"
                layout="@layout/custom_background"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/addlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/add_table"
                        android:text="+" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/removelayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    >

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:gravity="center"
                        android:src="@drawable/decrease_table"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    <!--</HorizontalScrollView>-->
</LinearLayout>