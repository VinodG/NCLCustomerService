<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_60sdp"
            android:orientation="vertical"
            android:weightSum="2">

            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:id="@+id/tvProduct"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Product" />

            <com.kenmeidearu.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/opportunirty_product_spinner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_spinner">

            </com.kenmeidearu.searchablespinnerlibrary.SearchableSpinner>
        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical"
            android:weightSum="2">

            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:id="@+id/tvplan_quantity"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Plan quantity" />

            <EditText
                android:id="@+id/et_plan_quantity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_bg_white"
                android:gravity="left"
                android:inputType="number">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/plant_layout"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical"
            android:visibility="gone"
            android:weightSum="2">

            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Plant" />

            <Spinner
                android:id="@+id/opportunirty_plant_spinner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/custom_spinner">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical"
            android:weightSum="2">

            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:id="@+id/tvQuantity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Quantity ordered" />

            <EditText
                android:id="@+id/opportunity_insert_quantity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg_white"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical"
            android:weightSum="2">

            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Quantity supplied" />

            <EditText
                android:id="@+id/et_quantity_supplied"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg_white"
                android:inputType="number" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical"
            android:weightSum="2">

            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Supplied date" />

            <com.ncl.nclcustomerservice.customviews.CustomTextView
                android:id="@+id/tvsupplied_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/button_bg_white">

            </com.ncl.nclcustomerservice.customviews.CustomTextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/addlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/add_table"
                    android:text="+" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/removelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="center"
                    android:src="@drawable/decrease_table" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>




</LinearLayout>