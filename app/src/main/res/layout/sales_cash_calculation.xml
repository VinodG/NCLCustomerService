<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:weightSum="2">

        <com.ncl.nclcustomerservice.customviews.CustomTextView
            style="@style/TextView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="amount"
            android:textColor="@color/black" />

        <com.ncl.nclcustomerservice.customviews.CustomTextView
            android:id="@+id/amount"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_white"
            android:gravity="center"
            android:inputType="number"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:weightSum="2">

        <com.ncl.nclcustomerservice.customviews.CustomTextView
            style="@style/TextView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="cash discount ( In % )"
            android:textColor="@color/black" />

        <com.ncl.nclcustomerservice.customviews.CustomEditText
            android:id="@+id/cash_discount"
            style="@style/TextView10"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_white"
            android:gravity="center"
            android:inputType="number"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.ncl.nclcustomerservice.customviews.CustomTextView
            style="@style/TextView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:singleLine="false"
            android:text="after discount amount"
            android:textColor="@color/black" />

        <com.ncl.nclcustomerservice.customviews.CustomTextView
            android:id="@+id/after_discount_amount"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_white"
            android:gravity="center"
            android:inputType="number"
            android:text="" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <com.ncl.nclcustomerservice.customviews.CustomTextView
            style="@style/TextView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:text="freight"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/freight"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/custom_spinner"
            android:gravity="center"
            android:inputType="number"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:weightSum="2"
        android:orientation="horizontal">

        <com.ncl.nclcustomerservice.customviews.CustomTextView
            android:id="@+id/other_label"
            style="@style/TextView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="freight other"
            android:textColor="@color/black"
            android:visibility="gone" />

        <com.ncl.nclcustomerservice.customviews.CustomEditText
            android:id="@+id/freight_other"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_white"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="number"
            android:text=""
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.ncl.nclcustomerservice.customviews.CustomTextView
            style="@style/TextView10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="total amount"
            android:textColor="@color/black" />

        <com.ncl.nclcustomerservice.customviews.CustomTextView
            android:id="@+id/total_amount"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_white"
            android:gravity="center"
            android:inputType="number"
            android:text="" />

    </LinearLayout>


</LinearLayout>