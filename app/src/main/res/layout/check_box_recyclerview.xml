<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.ncl.nclcustomerservice.customviews.CustomTextViewBold
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:text="Please Select"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_15sdp" />

    <ListView
        android:id="@+id/options_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/options_bottom_layout"
        android:layout_below="@+id/title"
        android:layout_marginLeft="@dimen/_10sdp">

    </ListView>

    <LinearLayout
        android:id="@+id/options_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:weightSum="2">

        <com.ncl.nclcustomerservice.customviews.CustomTextViewBold
            android:id="@+id/options_submit"
            style="@style/TextView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:text="SUBMIT"
            android:textColor="@color/piechartgreen" />

        <com.ncl.nclcustomerservice.customviews.CustomTextViewBold
            android:id="@+id/options_cancel"
            style="@style/TextView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/_10sdp"
            android:text="cancel"
            android:textColor="@color/red" />


    </LinearLayout>
</RelativeLayout>
