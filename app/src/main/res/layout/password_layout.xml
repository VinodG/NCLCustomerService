<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:background="@drawable/background_toolbar_multi"
    android:orientation="vertical">

    <com.ncl.nclcustomerservice.customviews.CustomTextViewBold
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="NCL ALTEK"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="@dimen/_17sdp"/>

    <com.ncl.nclcustomerservice.customviews.CustomTextviewSemiBold
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="Forgot Password ?"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />

    <com.ncl.nclcustomerservice.customviews.CustomTextView
        style="@style/TextView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_50sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:singleLine="false"
        android:text="Don't worry.Resetting your passowrd is easy, just tell us the mail address you registered with NCL ALTEK"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12sdp" />

    <com.ncl.nclcustomerservice.customviews.CustomEditText
        android:id="@+id/email_forgot"
        style="@style/TextView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:backgroundTint="@color/white"
        android:gravity="left"
        android:hint="Email"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="@dimen/_12sdp" />

    <com.ncl.nclcustomerservice.customviews.CustomButton
        android:id="@+id/get_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_40sdp"
        android:background="@drawable/button_border_blue"
        android:paddingLeft="@dimen/_30sdp"
        android:paddingRight="@dimen/_30sdp"
        android:text="Send"
        android:textColor="@color/white" />
</LinearLayout>
